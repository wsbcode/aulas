{
   "compilerOptions": {
      /* 1. Destino e Fonte */
      "target": "esnext",
      "module": "esnext",
      "outDir": "./public",
      "rootDir": "./src",

      /* 2. Limpeza (O que NÃO criar) */
      "sourceMap": false,
      "declaration": false,
      "declarationMap": false,

      /* 3. Comportamento no Navegador */
      "moduleDetection": "auto",
      "verbatimModuleSyntax": false,
      "isolatedModules": true,

      /* 4. Segurança e Rigor */
      "strict": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "jsx": "react-jsx"
   }
}
